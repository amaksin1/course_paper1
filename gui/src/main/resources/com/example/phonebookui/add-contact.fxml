<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="com.example.phonebookui.controllers.AddContactController"
          xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    <Label text="Phone number:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="phoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="Add" onAction="#handleAddButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="75" minWidth="75"/>

    <Button text="Back" onAction="#handleBackButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="75" minWidth="75"/>
</GridPane>
